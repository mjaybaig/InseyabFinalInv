@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-6">
        <h3>My Orders</h3>

        <table class="table">
            <tr>
                <th>Customer Name</th>
                <th>Date</th>
                <th>Ship Via</th>
                <th>Discount</th>
            </tr>
            <tr>
                @foreach (var o in ViewBag.Orders)
                {
                    <td>@o.Order.Customer.CompanyName</td>
                    <td>@o.Order.OrderDate</td>
                    <td>@o.Order.Shippers.CompanyName</td>
                    <td>@o.Discount</td>
                }
            </tr>

        </table>
    </div>
</div>